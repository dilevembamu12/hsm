                <tbody id="auditTableBody">
                  <tr>
                    <td colspan="5" class="text-center p-6 text-slate-500 loading-state">
                      <i class="fas fa-spinner spinner"></i> Chargement du journal...
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Audit Actions -->
          <div class="flex justify-between items-center mt-4">
            <div class="text-sm text-slate-600" id="auditSummary">Affichage de 0 événements</div>
            <div class="flex gap-2">
              <button class="btn btn-secondary" id="btnExportAudit">
                Exporter le journal
              </button>
              <button class="btn btn-danger" id="btnClearAudit">
                Vider le journal
              </button>
            </div>
          </div>
        </div>

        <!-- Settings Tab -->
        <div class="tab-content" id="settings">
          <div class="flex justify-between items-center mb-6">
            <div>
              <h1 class="text-2xl font-bold text-slate-800">Paramètres PKI</h1>
              <p class="text-slate-600">Configurez les paramètres de l'infrastructure à clé publique</p>
            </div>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
            <!-- General Settings -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-800 mb-4">Paramètres Généraux</h3>
              
              <div class="space-y-4">
                <div class="form-group">
                  <label class="form-label">Nom de l'organisation</label>
                  <input type="text" class="form-input" id="orgName" value="FIntraX Congo">
                </div>
                
                <div class="form-group">
                  <label class="form-label">Unité organisationnelle</label>
                  <input type="text" class="form-input" id="orgUnit" value="Services Financiers">
                </div>
                
                <div class="form-group">
                  <label class="form-label">Pays</label>
                  <select class="form-input" id="country">
                    <option value="CD">République Démocratique du Congo</option>
                    <option value="FR">France</option>
                    <option value="US">États-Unis</option>
                    <option value="BE">Belgique</option>
                  </select>
                </div>
              </div>
            </div>

            <!-- Certificate Settings -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-800 mb-4">Paramètres des Certificats</h3>
              
              <div class="space-y-4">
                <div class="form-group">
                  <label class="form-label">Durée de validité par défaut (jours)</label>
                  <input type="number" class="form-input" id="certValidity" value="365">
                </div>
                
                <div class="form-group">
                  <label class="form-label">Algorithme de signature par défaut</label>
                  <select class="form-input" id="defaultAlgo">
                    <option value="RSA">RSA 2048</option>
                    <option value="RSA3072">RSA 3072</option>
                    <option value="RSA4096">RSA 4096</option>
                    <option value="ECDSA">ECDSA P-256</option>
                    <option value="ECDSA384">ECDSA P-384</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label class="form-label">Intervalle de publication CRL (jours)</label>
                  <input type="number" class="form-input" id="crlInterval" value="7">
                </div>
              </div>
            </div>

            <!-- HSM Settings -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-800 mb-4">Paramètres HSM</h3>
              
              <div class="space-y-4">
                <div class="form-group">
                  <label class="form-label">Type de HSM</label>
                  <select class="form-input" id="hsmType">
                    <option value="smartcard">SmartCard-HSM</option>
                    <option value="nfast">nCipher nShield</option>
                    <option value="safenet">SafeNet Luna</option>
                    <option value="utimaco">Utimaco CryptoServer</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label class="form-label">PIN administrateur HSM</label>
                  <input type="password" class="form-input" id="hsmPin" placeholder="••••••••">
                </div>
                
                <div class="flex items-center">
                  <input type="checkbox" id="hsmAutoLogin" class="mr-2">
                  <label for="hsmAutoLogin">Connexion automatique au HSM</label>
                </div>
              </div>
            </div>

            <!-- Security Settings -->
            <div class="card p-6">
              <h3 class="text-lg font-semibold text-slate-800 mb-4">Paramètres de Sécurité</h3>
              
              <div class="space-y-4">
                <div class="form-group">
                  <label class="form-label">Exigences de complexité du mot de passe</label>
                  <select class="form-input" id="passwordPolicy">
                    <option value="low">Faible (6 caractères)</option>
                    <option value="medium" selected>Moyenne (8 caractères, chiffres)</option>
                    <option value="high">Élevée (10 caractères, chiffres, symboles)</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label class="form-label">Expiration du mot de passe (jours)</label>
                  <input type="number" class="form-input" id="passwordExpiry" value="90">
                </div>
                
                <div class="flex items-center">
                  <input type="checkbox" id="require2fa" class="mr-2">
                  <label for="require2fa">Exiger l'authentification à deux facteurs</label>
                </div>
              </div>
            </div>
          </div>

          <!-- Settings Actions -->
          <div class="flex justify-end gap-3">
            <button class="btn btn-secondary" id="btnResetSettings">
              Réinitialiser
            </button>
            <button class="btn btn-primary" id="btnSaveSettings">
              Enregistrer les paramètres
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- Toast Container -->
  <div class="toast-container" id="toastContainer"></div>

  <!-- Modals -->
  <!-- Generate Certificate Modal -->
  <div class="modal-overlay hidden" id="generateCertModal">
    <div class="modal w-full max-w-2xl">
      <div class="modal-header">
        <h3 class="text-xl font-bold text-slate-800">Générer un Nouveau Certificat</h3>
        <button class="text-slate-500 hover:text-slate-700 close-modal" data-modal="generateCertModal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <form id="generateCertForm">
        <div class="modal-body grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Colonne 1 -->
          <div>
            <h4 class="font-semibold mb-4 text-slate-600 border-b pb-2">Sujet du Certificat</h4>
            <div class="form-group">
              <label for="commonName" class="form-label">Nom Commun (CN)</label>
              <input type="text" id="commonName" name="commonName" class="form-input" placeholder="ex: www.domaine.com ou Nom Prénom" required>
            </div>
            <div class="form-group">
              <label for="organization" class="form-label">Organisation (O)</label>
              <input type="text" id="organization" name="organization" class="form-input" placeholder="ex: FIntraX Congo" value="FIntraX Congo">
            </div>
            <div class="form-group">
              <label for="orgUnit" class="form-label">Unité d'Organisation (OU)</label>
              <input type="text" id="orgUnit" name="orgUnit" class="form-input" placeholder="ex: Département IT" value="PKI Services">
            </div>
             <div class="form-group">
              <label for="email" class="form-label">Adresse E-mail</label>
              <input type="email" id="email" name="email" class="form-input" placeholder="ex: utilisateur@domaine.com">
            </div>
          </div>
          <!-- Colonne 2 -->
          <div>
            <h4 class="font-semibold mb-4 text-slate-600 border-b pb-2">Configuration</h4>
            <div class="form-group">
              <label for="certType" class="form-label">Type de Certificat</label>
              <select id="certType" name="certType" class="form-input">
                <option value="user" selected>Utilisateur</option>
                <option value="server">Serveur</option>
                <option value="email">Signature E-mail</option>
                <option value="code">Signature de Code</option>
              </select>
            </div>
            <div class="form-group">
              <label for="validityDays" class="form-label">Période de Validité (jours)</label>
              <input type="number" id="validityDays" name="validityDays" class="form-input" value="365" required>
            </div>
            <div class="form-group">
              <label for="keySize" class="form-label">Taille de la Clé (bits)</label>
              <select id="keySize" name="keySize" class="form-input">
                <option value="2048" selected>2048 bits (Standard)</option>
                <option value="3072">3072 bits</option>
                <option value="4096">4096 bits (Élevé)</option>
              </select>
            </div>
             <div class="form-group">
              <label for="country" class="form-label">Pays (C)</label>
              <input type="text" id="country" name="country" class="form-input" value="CD" maxlength="2">
            </div>
          </div>
          <div class="md:col-span-2 grid grid-cols-2 gap-4">
               <div class="form-group">
                  <label for="locality" class="form-label">Localité (L)</label>
                  <input type="text" id="locality" name="locality" class="form-input" value="Kinshasa">
                </div>
                <div class="form-group">
                  <label for="state" class="form-label">État/Province (ST)</label>
                  <input type="text" id="state" name="state" class="form-input" value="Kinshasa">
                </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary close-modal" data-modal="generateCertModal">
            Annuler
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-plus mr-2"></i>
            Générer le Certificat
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Certificate Details Modal -->
  <div class="modal-overlay hidden" id="certDetailsModal">
    <div class="modal w-full max-w-4xl">
      <div class="modal-header">
        <h3 class="text-xl font-bold">Détails du Certificat</h3>
        <button class="text-slate-500 hover:text-slate-700 close-modal" data-modal="certDetailsModal">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="empty-state">
          <i class="fas fa-info-circle text-4xl"></i>
          <h3 class="text-lg font-semibold mb-2">Détails du certificat</h3>
          <p class="text-slate-600">Cette fonctionnalité sera disponible prochainement</p>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary close-modal" data-modal="certDetailsModal">
          Fermer
        </button>
      </div>
    </div>
  </div>

  <!-- Progress Modal -->
  <div class="modal-overlay hidden" id="progressModal">
    <div class="modal w-full max-w-lg">
      <div class="modal-header">
        <h3 class="text-xl font-bold text-center" id="progressTitle">Opération en Cours</h3>
      </div>
      <div class="modal-body">
        <div class="bg-slate-900 text-white rounded-lg overflow-hidden shadow-inner h-64 p-4">
          <div id="progressLog" class="h-full overflow-y-auto font-mono text-sm"></div>
        </div>
        <div class="mt-4 flex items-center">
          <div class="progress-bar">
            <div id="progressBar" class="progress-fill" style="width: 0%"></div>
          </div>
          <span id="progressPercent" class="ml-3 text-sm font-medium">0%</span>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary w-full hidden" id="closeProgressBtn">
          Fermer
        </button>
      </div>
    </div>
  </div>

  <!-- 🔽🔽🔽 IMPORTANT : APPEL EXTERNE À pki.js 🔽🔽🔽 -->
  <script src="/assets/js/pki.js"></script>
</body>
</html>
